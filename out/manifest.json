{
    "name":"IMDb Checker SG",
    "version":"1.0.0.5",
    "manifest_version":2,
    "description":"Show IMDb rating on Singapore cinema websites",
    "permissions":[
        "http://www.imdb.com/"
    ],
    "icons":{
        "128":"icon-128.png",
        "16":"icon-16.png",
        "48":"icon-48.png"
    },
    "browser_action":{
        "default_icon":"icon-128.png",
        "default_popup":"popup.html"
    },
    "background":{
        "scripts":["jquery-1.9.1.min.js", "background.js"]
    },
    "content_scripts":[
        {
            "js":["jquery-1.9.1.min.js", "main.js"],
            "matches":["http://www.shaw.sg/sw_movie*", "http://www.cathaycineplexes.com.sg/movie-listing*",
                "http://www.filmgarde.com.sg/nowshowing*", "http://www.gv.com.sg/movies*"]
        }
    ]
}